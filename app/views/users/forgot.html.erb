<div class="titleB"><%= I18n.t('tog_user.user.forgot_password') %></div>
<p>
    <span class="fontsmaller"><%= I18n.t('tog_user.user.forgot_password_help') %></span>  
</p>


<div id="area_signup">
   <%= error_messages_for :user %>
   <% form_for :user, :url => forgot_path, :html => {:id => "f_signup", :name => "f_signup" } do |f| -%>
    <fieldset>
     <p>
       <label for="email"><%= I18n.t('tog_user.model.your_email') %></label>
       <%= f.text_field :email, :class => "fieldbox", :size => "74" %>
     </p>
    </fieldset>
    <div class="actions">
      <%= submit_tag I18n.t('tog_user.send'), :class => "button mainaction" %>
    </div>
  
   <% end -%>
</div>
